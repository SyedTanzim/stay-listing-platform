<% layout('layouts/boilerplate') %>

    <div class="container mt-4">

        <div class="d-flex justify-content-between mb-3">
            <h1 class="fw-bold">
                <%= hotel.name %>
            </h1>
        </div>

        <div class="row">
            <div class="col-md-6">
                <img src="<%= hotel.image %>" class="img-fluid rounded shadow-sm" alt="Hotel image">
            </div>

            <div class="col-md-6">
                <p class="text-muted mt-3">
                    <%= hotel.description %>
                </p>

                <h4 class="text-success fw-bold">
                    â‚¹ <%= hotel.price.toLocaleString('en-IN') %> / Night
                </h4>

                <p><strong>Website:</strong>
                    <%= hotel.site %>
                </p>
                <p><strong>Country:</strong>
                    <%= hotel.country %>
                </p>
            </div>
        </div>
        <br>

        <a href="/hotels/edit/<%= hotel._id %>">
            <button class="btn btn-sm btn-warning">
                Edit
            </button>
        </a>
        <br><br>
        <form action="/hotels/delete/<%= hotel._id %>?_method=DELETE" method="post">
            <button class="btn btn-sm btn-danger">
                Delete
            </button>
        </form>

    </div>